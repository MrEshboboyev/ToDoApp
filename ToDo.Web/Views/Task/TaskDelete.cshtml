@model TaskDto

@{
    ViewData["Title"] = "TaskDelete";
}

<h1>Task Delete</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <input asp-for="Id" hidden />
        <form asp-action="TaskDelete">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input disabled asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input disabled asp-for="Description" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input disabled class="form-check-input" asp-for="IsCompleted" /> @Html.DisplayNameFor(model => model.IsCompleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label"></label>
                <input disabled asp-for="DueDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <input disabled asp-for="Priority" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
